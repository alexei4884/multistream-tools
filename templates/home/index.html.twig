{% extends 'base.html.twig' %}

{% block body %}
    <div class="bg-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="max-w-2xl mx-auto py-16 sm:py-24 lg:py-32 lg:max-w-none">
                <h2 class="text-2xl font-extrabold text-gray-900">Changer mes informations</h2>
                <div class="mt-6 space-y-12 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-x-6">
                    <a href="{{ path('updateStreamInfos') }}">Change title</a>
                </div>
                <h2 class="text-2xl font-extrabold text-gray-900">Plateformes</h2>

                <div class="mt-6 space-y-12 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-x-6">
                {% for platform in platforms %}
                    <div class="group relative">
                        <div class="relative w-full h-80 bg-white rounded-lg overflow-hidden group-hover:opacity-75 sm:aspect-w-2 sm:aspect-h-1 sm:h-64 lg:aspect-w-1 lg:aspect-h-1">
                            <img src="{{ platform.image }}" alt="Desk with leather desk pad, walnut desk organizer, wireless keyboard and mouse, and porcelain mug." class="w-full h-full object-center object-cover">
                        </div>
                        <h3 class="mt-6 text-sm text-gray-500">
                            <a href="{{ path(platform.path) }}">
                                <span class="absolute inset-0"></span>
                                {% if app.user != null %}
                                    {% for account in app.user.accounts|filter(account => account.platform == platform) %}
                                        Vous êtes actuellement connecté avec l'adresse {{ account.email }}.
                                    {% endfor %}
                                {% endif %}
                            </a>
                        </h3>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
